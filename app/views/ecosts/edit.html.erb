<link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.1/jquery-ui.js"></script>
  <link href="http://getbootstrap.com/dist/css/bootstrap.min.css" rel="stylesheet">
  <script>
  $(function() {
    $( "#datepicker" ).datepicker({
    	"dateFormat": "yy-mm-dd", minDate: 0, numberOfMonths: 3
    });
  });
  </script>
<br/>
<% @eCost.errors.full_messages.each do |error| %>
<%= error %>
<% end %>

<%= render "partials/dashboardlink" %>

	<table class="table table-striped" style="margin-left: 15px;">
		<thead>
			<tr>
			<th style="border: 1px solid black; text-align: center; width: 275px;">Expected Cost Entry Date</th>
			<th style="border: 1px solid black; vertical-align: text-top; text-align: center; width: 350px;">Expected Cost Entry Title</th>
			<th style="border: 1px solid black; text-align: center; width: 300px;">Expected Cost Entry Value</th>
			<th style="border: none"> </th>
			</tr>
		</thead>
		<tbody>
			<tr style="text-align: center;">
			<td style="border: 1px solid black;"><%= @eCost.date.to_formatted_s(:long) %></td>
			<td style="border: 1px solid black; word-wrap:break-word;"><%= @eCost.title %></td>
		 	<td style="border: 1px solid black;">&#36;<%= @eCost.ecost %></td>
			</tr>
		</tbody>
	</table>
<div style="margin-left: 15px;">
	<%= form_for [@user, @dashboard, @eCost] do |f| %>

	 <%=f.label :Date %>
	 <%=f.text_field :date, :id => 'datepicker' %>	
	 <%=f.label :Title %>
	 <%=f.text_field :title %>
	 <%=f.label :Expected_Cost_Value %>
	 <%=f.text_field :ecost %>

	 <%=f.submit :"Submit Edit" %>
	<% end %>
</div>